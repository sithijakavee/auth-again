generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  image    String?
  country  String
  sessions Session[]
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sid       String   @unique
  userId    String   @db.ObjectId
  userAgent String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id])
}
